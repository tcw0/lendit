{
  "name": "lendit-server",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prepare": "cd .. && husky install",
    "lint": "eslint .",
    "dev": "yarn api:gen && nodemon --exec ts-node -r tsconfig-paths/register src/server.ts",
    "build": "yarn api:gen && run-s clean compile postBuild",
    "postBuild": "ncp node_modules dist/node_modules",
    "start": "yarn run build && node -r tsconfig-paths/register dist/server/src/server.js",
    "clean": "rimraf dist",
    "compile": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start:db": "docker-compose -f ./docker-compose.yaml up -d",
    "stop:db": "docker-compose stop",
    "api:gen": "rimraf ../api/generated && openapi --input ../api/src/api.yaml --output ../api/generated --request ../api/src/request.ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.363.0",
    "aws-sdk": "^2.1409.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "date-fns": "^2.30.0",
    "debug": "^4.3.4",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-fileupload": "^1.4.0",
    "formidable": "^3.5.0",
    "geolib": "^3.3.4",
    "jsonwebtoken": "^9.0.0",
    "jwt-simple": "^0.5.6",
    "mongoose": "^7.1.1",
    "morgan": "^1.10.0",
    "pdfkit": "^0.13.0",
    "pdfkit-table": "^0.1.99",
    "sib-api-v3-typescript": "^2.2.2",
    "stripe": "^12.13.0",
    "swagger-ui-express": "^4.6.3",
    "ts-dotenv": "^0.9.1",
    "tsc-alias": "^1.8.7",
    "winston": "^3.9.0",
    "yamljs": "^0.3.0",
    "yarn": "^1.22.19"
  },
  "devDependencies": {
    "@jest/globals": "^29.5.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cookie-parser": "^1.4.3",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/express-fileupload": "^1.4.1",
    "@types/jest": "^29.5.1",
    "@types/jwt-simple": "^0.5.33",
    "@types/morgan": "^1.9.4",
    "@types/node": "^18.15.11",
    "@types/pdfkit": "^0.12.10",
    "@types/request": "^2.48.8",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/yamljs": "^0.2.31",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "8.2.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "2.25.3",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.0",
    "ncp": "^2.0.0",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "openapi-typescript-codegen": "^0.24.0",
    "prettier": "^2.8.8",
    "rimraf": "^5.0.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.0.4"
  },
  "nodemonConfig": {
    "watch": [
      "src",
      "src/../../api/generated"
    ]
  }
}
